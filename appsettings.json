{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "BmoKids": {
    "SpeechRecognition": {
      "DefaultLanguage": "ar-EG",
      "DefaultTimeout": 5000,
      "MaxAlternatives": 5
    },
    "TextToSpeech": {
      "DefaultLanguage": "ar-EG",
      "DefaultRate": 0.95,
      "DefaultPitch": 1.0
    },
    "Assessment": {
      "MaxAttempts": 2,
      "DefaultAge": 6,
      "ConfidenceThresholds": {
        "Age3to5": 0.28,
        "Age6to8": 0.35,
        "Age9to12": 0.45
      }
    }
  }
}